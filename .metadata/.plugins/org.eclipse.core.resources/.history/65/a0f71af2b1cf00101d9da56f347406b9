package wwa;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;

public class SupplierClient {

    private static final String HOST = "localhost";
    private static final int PORT = 5000;

    public static void main(String[] args) {
        System.out.println("Supplier client starting...");

        try (Socket socket = new Socket(HOST, PORT);
             BufferedReader in = new BufferedReader(
                     new InputStreamReader(socket.getInputStream()));
             PrintWriter out = new PrintWriter(socket.getOutputStream(), true)) {

            // 1. Check_stock
            out.println("CHECK_STOCK");
            System.out.println("Sent: CHECK_STOCK");
            System.out.println("Server: " + in.readLine());

            // 2. Add_apples(number)
            out.println("ADD_APPLES,300");
            System.out.println("Sent: ADD_APPLES,300");
            System.out.println("Server: " + in.readLine());

            // 3. Add_oranges(number)
            out.println("ADD_ORANGES,250");
            System.out.println("Sent: ADD_ORANGES,250");
            System.out.println("Server: " + in.readLine());

            // 4. Final check_stock
            out.println("CHECK_STOCK");
            System.out.println("Sent: CHECK_STOCK");
            System.out.println("Server: " + in.readLine());

            // 5. Quit
            out.println("QUIT");
            System.out.println("Sent: QUIT");
            System.out.println("Server: " + in.readLine());

        } catch (IOException e) {
            System.err.println("Supplier error: " + e.getMessage());
            e.printStackTrace();
        }
    }
}
